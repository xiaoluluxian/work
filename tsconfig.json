{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "noImplicitAny": false,
        "strict": false,
        "outDir": "dist",
        "removeComments": true,
        "strictNullChecks": false,
        "noImplicitThis": false,
        "sourceMap": true,
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "exclude": [
        "node_modules",
        "public"
    ],
    "include": [
        "src/**/*",
        "render/**/*"
    ]
}